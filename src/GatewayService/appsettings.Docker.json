{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Information"
        }
    },
    "IdentityServiceUrl": "http://identity-svc",
    "ReverseProxy": {
        "search": {
            "ClusterId": "search",
            "Match": {
                "Path": "/search/{**catch-all}"
            },
            "Transforms": [
                {
                    "PathPattern": "api/search/{**catch-all}"
                }
            ]
        }
    },
    "Clusters": {
        "auctions": {
            "Destinations": {
                "auctionApi": {
                    "Address": "http://auctino-svc"
                }
            }
        },
        "search": {
            "Destinations": {
                "searchApi": {
                    "Address": "http://search-svc"
                }
            }
        }
    }
}